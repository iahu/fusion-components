{
  "compilerOptions": {
    // "incremental": true,
    "target": "es2015",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "./dist/esm",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "mocha"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts", "./types"],
  "exclude": ["./src/**/*.stories.ts"]
}
