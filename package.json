{
  "name": "@egret/fusion-components",
  "version": "1.0.10",
  "description": "一套面向类桌面应用的沉浸式风格 Web Components UI 库",
  "module": "dist/esm/index.js",
  "main": "dist/fusion-components.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "start": "yarn storybook",
    "clean:dist": "rimraf dist",
    "copy-files": "copyfiles -u 1 src/**/*.css dist/esm/",
    "prebuild": "yarn clean:dist",
    "build": "yarn build:esm && yarn build:bundle",
    "build:esm": "rollup --config rollup.config.esm.js",
    "build:dts": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build:bundle": "rollup --config rollup.config.bundle.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o ./docs",
    "prettier": "prettier --fix --write ./src/**/*.ts",
    "pretest": "yarn build:esm",
    "test": "web-test-runner 'dist/**/*.test.js' --node-resolve",
    "test:watch": "web-test-runner 'dist/**/*.test.js' --node-resolve --watch"
  },
  "keywords": [
    "web components",
    "ui",
    "components",
    "desktop",
    "application"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/html": "^6.2.9",
    "@storybook/theming": "^6.2.9",
    "@storybook/web-components": "^6.2.9",
    "@types/mocha": "^9.0.0",
    "@types/node": "^15.12.4",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@web/test-runner": "^0.13.16",
    "babel-loader": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "less-loader": "6.1.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.2",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-lit-css": "^3.0.1",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sb": "^6.3.0",
    "sinon": "^11.1.2",
    "style-loader": "^2.0.0",
    "ts-loader": "7.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "yargs": "^17.0.1"
  },
  "dependencies": {
    "exp-calc": "^1.0.3",
    "lit": "^2.0.0-rc.2",
    "lit-html": "^1.4.1",
    "tslib": "^2.3.0"
  }
}
